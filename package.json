{
  "name": "vega-scenegraph",
  "version": "2.0.0-beta.1",
  "description": "Vega scenegraph and renderers.",
  "license": "BSD-3-Clause",
  "author": {
    "name": "Jeffrey Heer",
    "url": "http://idl.cs.washington.edu"
  },
  "contributors": [
    {
      "name": "Arvind Satyanarayan",
      "url": "http://arvindsatya.com"
    },
    {
      "name": "Emily Gu",
      "url": "https://github.com/emilygu"
    }
  ],
  "main": "build/vega-scenegraph.js",
  "module": "index",
  "jsnext:main": "index",
  "repository": {
    "type": "git",
    "url": "http://github.com/vega/vega-scenegraph.git"
  },
  "scripts": {
    "build": "npm run test && uglifyjs build/vega-scenegraph.js -c -m -o build/vega-scenegraph.min.js",
    "pretest": "rm -rf build && mkdir build && rollup -f umd -g d3-path:d3,d3-shape:d3,vega-loader:vega -n vega -o build/vega-scenegraph.js -- index.js && bin/schema > build/vega-scenegraph-schema.json",
    "test": "tape 'test/**/*-test.js' && eslint index.js src test",
    "test:server": "sh test/webgl/test-server-up.sh >.server.log",
    "test:server:down": "sh test/webgl/test-server-down.sh",
    "test:webgl": "result=true; npm run test:server:down; npm run test:server && wdio wdio.conf.js || result=false; npm run test:server:down; ${result}",
    "prepublish": "npm run build",
    "postpublish": "git push && git push --tags && zip -j build/vega-scenegraph.zip -- LICENSE README.md build/vega-scenegraph-schema.json build/vega-scenegraph.js build/vega-scenegraph.min.js"
  },
  "dependencies": {
    "d3-color": "1",
    "d3-path": "1",
    "d3-shape": "1",
    "extrude-polyline": "^1.0.6",
    "parse-svg-path": "^0.1.2",
    "simplify-path": "^1.1.0",
    "svg-path-contours": "^2.0.0",
    "triangulate-contours": "^1.0.2",
    "vega-loader": ">=2.0.0-beta"
  },
  "optionalDependencies": {
    "canvas": "^1.4.0"
  },
  "devDependencies": {
    "eslint": "2",
    "http-server": "^0.9.0",
    "jsdom": "^3.0.0",
    "rollup": "0.36",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0",
    "tape": "4",
    "tv4": "1",
    "uglify-js": "2",
    "wdio-dot-reporter": "0.0.6",
    "wdio-mocha-framework": "^0.5.4",
    "webdriverio": "^4.4.0"
  }
}
